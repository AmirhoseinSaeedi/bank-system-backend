extends layout

block content
    form(action='/transaction/create', method='post')
        div(class='mx-auto' style='margin: 20px; padding: 20px; border: 1px solid black; border-radius: 15px; background-color: antiquewhite; box-sizing: border-box; width: 30%')
            h4 Transaction Details
            hr
            p Sender Username
            div(class='')
                input(class="form-control" type='text' name='sender_username')
            p Receiver Username
            div(class='')
                input(class='form-control' type="text" name="receiver_username")
            p Amount
            div(class='')
                input(class='form-control' type="text" name="amount")
            div(class='')
                input(class='btn btn-outline-dark mt-4' type='submit' value='Create Transaction')
