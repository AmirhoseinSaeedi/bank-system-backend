extends layout

block content
  div.container-fluid.w-75.py-5.rounded(style="background-color: #f5f5f5; padding: 20px; height: 100vh") 
    h3 Cashier Details
    hr
    each transfer in data
      div.row
        div.col-md-6
          h5 Sender Information
          hr
          div.row.mb-3
            div.col-md-6
              label Full Name:
              p#senderFullName=transfer.user_firstName +' '+ transfer.user_lastName
            div.col-md-6
              label Account Number:
              p#senderAccountNumber 123456789
        div.col-md-6.text-center
          h5 Acceptor Information
          hr
          div.row.mb-3
            div.col-md-6
              label Acceptor Code:
              p#receiverFullName=transfer.acceptorcode
      div.row
        div.col-md-12
          h5 Transaction Details
          hr
          div.row.mb-3
            div.col-md-4
              label Amount:
              p#transactionAmount=transfer.amount
            div.col-md-4
              label Date:
              p#transactionDate=transfer.date_time
            div.col-md-4
              label Status:
              div.d-flex.align-items-center
                input.form-control(type="text" id="transaction-status" value=transfer.status)
                button.btn.btn-primary.ml-2(type="button" onclick=`/transaction/withdrawal/update`) Edit
