extends layout

block content
    //- p customers:

    div(class='container fluid w-75 vstack')
        h3 customers:
        div(class='my-4') 
            button(class='btn btn-primary') add 
            button(class='btn btn-secondary mx-2') all transactions
        table.table(class='mt-8')
            tr
                //- th Id
                th Name
                th Last Name
                th
                
            each customer in results
                tr
                td=customer.firstname
                td=customer.lastname
                td
                    button(type='button' class='btn btn-primary mx-3' onclick=`location.href='/user/${customer.id}'`) details
                    button.btn.btn-outline-danger delete