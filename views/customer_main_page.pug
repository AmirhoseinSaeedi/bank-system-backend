extends layout

block content

    div(class='container-fluid w-75')
        div(class='mb-3' style='background-color: #f0f0f0; padding: 12px; border-radius: 8px; color: #333;')
            if response.userData 
                each customer in response.userData
                    form(action="/user/update/" + customer.id, method="post")
                        h5(style='margin-bottom: 6px;') Name
                        div(class='input-group mb-2')
                            input(id='name-input' class='form-control' name="firstName" value=customer.firstname)
                        h5(style='margin-bottom: 6px;') Last Name
                        div(class='input-group mb-2')
                            input(id='last-name-input' class='form-control' name="lastName" value=customer.lastname)
                        h5(style='margin-bottom: 6px;') Phone Number
                        div(class='input-group mb-2')
                            input(id='last-name-input' class='form-control' name="phoneNumber" value=customer.phoneNumber)
                        h5(style='margin-bottom: 6px;') National Id
                        div(class='input-group mb-2')
                            input(id='last-name-input' class='form-control' name="nationalId" value=customer.NationalId)
                        h5(style='margin-bottom: 6px;') User Name
                        div(class='input-group mb-2')
                            input(id='account-number-input' class='form-control' value=customer.username)
                        button.btn.btn-outline-dark(type='button') Update
    div(class='container-fluid w-75 mt-4')
        button.btn.btn-success(type='button' onclick=`location.href='/transaction/withdrawal/customer/createPage/${response.userData[0].username}'`) Create Withdrawal
        button.btn.btn-primary.mx-2(type='button' onclick=`location.href='/transaction/transfer/customer/createPage/${response.userData[0].username}'`) Create Transaction
    div(class='container-fluid w-75 h-100' style='background-color: #f5f5f5; padding: 20px; border-radius: 10px;')
        h3.mt-5 All Transactions:
        hr
        br
        br
        h4 Withdrawals:
        hr
        table.table.table-striped.table-hover
            thead
                tr
                    th Cashier Name
                    th Cashier Last Name
                    th Date
                    th Amount
                    th Status
                    th
            tbody
                if response.withdrawalData
                    each transaction in response.withdrawalData
                        tr
                            td()=response.userData[0].firstname
                            td()=response.userData[0].lastname
                            td()=transaction.date_time
                            td()=transaction.amount
                            td=transaction.status
                            td 
        h4.mt-5 Transfers:
        hr
        table.table.table-striped.table-hover
            thead
                tr
                    th Sender Name
                    th Sender Last Name
                    th Receiver Name
                    th Receiver Last Name
                    th Date
                    th Amount
                    th Status
                    th
            tbody
                if response.transferData
                    each transaction in response.transferData
                        tr
                            td()=response.userData[0].firstname
                            td()=response.userData[0].lastname
                            td()=transaction.receiver_firstName
                            td()=transaction.receiver_lastName
                            td()=transaction.date
                            td()=transaction.amount
                            td=transaction.status
                            td 
                            

        h4.mt-5 Deposits:
        hr
        table.table.table-striped.table-hover
            thead
                tr
                    th Sender Name
                    th Sender Last Name
                    th Receiver Name
                    th Receiver Last Name
                    th Date
                    th Amount
                    th Status
                    th
            tbody
                if response.depositData
                    each transaction in response.depositData
                        tr
                            td()=transaction.sender_firstName
                            td()=transaction.sender_lastName
                            td()=response.userData[0].firstname
                            td()=response.userData[0].lastname
                            td()=transaction.date
                                td()=transaction.amount
                            td=transaction.status
                            td 
                                

